<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<LinearLayout 
	          android:paddingLeft="15dip"
	          android:paddingRight="15dip"
	          android:orientation="vertical" 
	          android:layout_width="fill_parent"
              android:layout_height="fill_parent"
	          >
		      <LinearLayout 
		          android:orientation="horizontal" 
		          android:paddingTop="15dip"
		          android:paddingBottom="15dip"
		          android:paddingLeft="5dip"
		          android:layout_width="match_parent"
	              android:layout_height="wrap_content"
		          >
		          <ImageView
		              android:layout_width="35dp"
	              	  android:layout_height="35dp"
	              	  android:src="@drawable/headshow10"
	              	  android:scaleType="fitCenter"
		              />
		          <TextView
		              android:layout_width="wrap_content"
	              	  android:layout_height="fill_parent"
	              	  android:layout_marginLeft="10dp"
	              	  android:text="小芬子不理小子"
	              	  android:textSize="15dip"
	              	  android:gravity="center"
	              	  android:textColor="@color/black"
		              />
		      </LinearLayout>
		      
		      <TextView
		          android:layout_width="fill_parent"
	              android:layout_height="0.5dp"
	              android:background="@color/lightgray"
		          />
		      <LinearLayout 
		          android:orientation="horizontal" 
		          android:paddingTop="15dip"
		          android:paddingBottom="15dip"
		          android:paddingLeft="5dip"
		          android:layout_width="match_parent"
	              android:layout_height="wrap_content"
		          >
		          <ImageView
		              android:layout_width="35dp"
	              	  android:layout_height="35dp"
	              	  android:src="@drawable/ofm_photo_icon1"
	              	  android:scaleType="fitCenter"
		              />
		          <TextView
		              android:layout_width="wrap_content"
	              	  android:layout_height="fill_parent"
	              	  android:layout_marginLeft="10dp"
	              	  android:text="相册"
	              	  android:textSize="15dip"
	              	  android:gravity="center"
	              	  android:textColor="@color/black"
		              />
		      </LinearLayout>
		      
		      <TextView
		          android:layout_width="fill_parent"
	              android:layout_height="0.5dp"
	              android:background="@color/lightgray"
		          />
		      <LinearLayout 
		          android:orientation="horizontal" 
		          android:paddingTop="15dip"
		          android:paddingBottom="15dip"
		          android:paddingLeft="5dip"
		          android:layout_width="match_parent"
	              android:layout_height="wrap_content"
		          >
		          <ImageView
		              android:layout_width="35dp"
	              	  android:layout_height="35dp"
	              	  android:src="@drawable/ofm_collect_icon1"
	              	  android:scaleType="fitCenter"
		              />
		          <TextView
		              android:layout_width="wrap_content"
	              	  android:layout_height="fill_parent"
	              	  android:layout_marginLeft="10dp"
	              	  android:text="收藏"
	              	  android:textSize="15dip"
	              	  android:gravity="center"
	              	  android:textColor="@color/black"
		              />
		      </LinearLayout>
		      
		      <TextView
		          android:layout_width="fill_parent"
	              android:layout_height="0.5dp"
	              android:background="@color/lightgray"
		          />
		      <LinearLayout 
		          android:orientation="horizontal" 
		          android:paddingTop="15dip"
		          android:paddingBottom="15dip"
		          android:paddingLeft="5dip"
		          android:layout_width="match_parent"
	              android:layout_height="wrap_content"
		          >
		          <ImageView
		              android:layout_width="35dp"
	              	  android:layout_height="35dp"
	              	  android:src="@drawable/ofm_card_icon1"
	              	  android:scaleType="fitCenter"
		              />
		          <TextView
		              android:layout_width="wrap_content"
	              	  android:layout_height="fill_parent"
	              	  android:layout_marginLeft="10dp"
	              	  android:text="钱包"
	              	  android:textSize="15dip"
	              	  android:gravity="center"
	              	  android:textColor="@color/black"
		              />
		      </LinearLayout>
		       <TextView
		          android:layout_width="fill_parent"
	              android:layout_height="0.5dp"
	              android:background="@color/lightgray"
		          />
		      <LinearLayout 
		          android:orientation="horizontal" 
		          android:paddingTop="15dip"
		          android:paddingBottom="15dip"
		          android:paddingLeft="5dip"
		          android:layout_width="match_parent"
	              android:layout_height="wrap_content"
		          >
		          <ImageView
		              android:layout_width="35dp"
	              	  android:layout_height="35dp"
	              	  android:src="@drawable/more_emoji_store"
	              	  android:scaleType="fitCenter"
		              />
		          <TextView
		              android:layout_width="wrap_content"
	              	  android:layout_height="fill_parent"
	              	  android:layout_marginLeft="10dp"
	              	  android:text="表情"
	              	  android:textSize="15dip"
	              	  android:gravity="center"
	              	  android:textColor="@color/black"
		              />
		      </LinearLayout>
		      <TextView
		          android:layout_width="fill_parent"
	              android:layout_height="0.5dp"
	              android:background="@color/lightgray"
		          />
		      <LinearLayout 
		          android:orientation="horizontal" 
		          android:paddingTop="15dip"
		          android:paddingBottom="15dip"
		          android:paddingLeft="5dip"
		          android:layout_width="match_parent"
	              android:layout_height="wrap_content"
		          >
		          <ImageView
		              android:layout_width="35dp"
	              	  android:layout_height="35dp"
	              	  android:src="@drawable/ofm_setting_icon1"
	              	  android:scaleType="fitCenter"
		              />
		          <TextView
		              android:layout_width="wrap_content"
	              	  android:layout_height="fill_parent"
	              	  android:layout_marginLeft="10dp"
	              	  android:text="设置"
	              	  android:textSize="15dip"
	              	  android:gravity="center"
	              	  android:textColor="@color/black"
		              />
		      </LinearLayout>
		      
		      <TextView
		          android:layout_width="fill_parent"
	              android:layout_height="0.5dp"
	              android:background="@color/lightgray"
		          />
		    </LinearLayout>
</LinearLayout>